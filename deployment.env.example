# Deployment Configuration for Replit
# Copy this file and set the required values before deployment

# Core Configuration (REQUIRED)
NODE_ENV=production
DATABASE_URL=postgresql://user:password@host:port/dbname
JWT_SECRET=your-secure-jwt-secret-here
SESSION_SECRET=your-secure-session-secret-here

# Optional External Services (can be empty)
SENDGRID_API_KEY=
KEITARO_TOKEN=
VOLUUM_TOKEN=
BINOM_TOKEN=
REDTRACK_TOKEN=
GOOGLE_CLOUD_PROJECT_ID=
GOOGLE_CLOUD_STORAGE_BUCKET=
GOOGLE_APPLICATION_CREDENTIALS=

# Server Settings
PORT=5000
FROM_EMAIL=noreply@your-domain.com

# SSL Settings
ENABLE_REAL_SSL=true
LETSENCRYPT_CONTACT_EMAIL=admin@your-domain.com

# Feature Flags
ANTIFRAUD_ENABLED=true
RATE_LIMIT_ENABLED=true
ENABLE_2FA=true
ENABLE_KYC=true
ENABLE_AUDIT_LOGS=true
ENABLE_REAL_TIME_ANALYTICS=true