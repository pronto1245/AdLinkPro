# Production Environment Configuration Template
# Copy this to .env and fill in the required values

# === REQUIRED FOR PRODUCTION ===
NODE_ENV=production
PORT=5000

# Strong JWT secret (REQUIRED - generate with: openssl rand -base64 48)
JWT_SECRET=

# Strong session secret (REQUIRED - generate with: openssl rand -base64 48)  
SESSION_SECRET=

# PostgreSQL database URL (REQUIRED)
DATABASE_URL=postgresql://username:password@host:port/database

# === OPTIONAL SERVICES ===
# SendGrid for email notifications (optional - warnings if missing)
SENDGRID_API_KEY=
FROM_EMAIL=noreply@yourdomain.com
FROM_NAME=AdLinkPro Platform

# External tracker integrations (optional - warnings if missing)
KEITARO_TOKEN=
VOLUUM_TOKEN=
REDTRACK_TOKEN=
BINOM_TOKEN=

# Google Cloud Storage (optional - warnings if missing)
GOOGLE_CLOUD_PROJECT_ID=
GOOGLE_CLOUD_STORAGE_BUCKET=
GOOGLE_APPLICATION_CREDENTIALS=

# === SECURITY & PERFORMANCE ===
# JWT token expiration (default: 24h)
JWT_EXPIRES_IN=24h

# CORS allowed origins (comma-separated)
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Rate limiting (requests per 15min window)
RATE_LIMIT_REQUESTS=1000

# Password security (bcrypt rounds)
BCRYPT_ROUNDS=12

# === LOGGING ===
LOG_LEVEL=info
LOG_FILE=logs/app.log

# === OPTIONAL INTEGRATIONS ===
# Redis for caching (optional)
REDIS_URL=

# Telegram notifications (optional)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# === MONITORING ===
# Sentry error tracking (optional)
SENTRY_DSN=

# === GENERATE SECURE SECRETS ===
# Generate JWT_SECRET:
# node -e "console.log(require('crypto').randomBytes(48).toString('base64'))"
# 
# Or with OpenSSL:
# openssl rand -base64 48