# === ОБЯЗАТЕЛЬНЫЕ ПЕРЕМЕННЫЕ ===
# База данных (PostgreSQL)
DATABASE_URL="postgresql://username:password@host:port/database"

# Секретные ключи для JWT и сессий (ОБЯЗАТЕЛЬНО поменяйте!)
JWT_SECRET="your-super-secret-jwt-key-min-256-bits-long-please-change-this"
SESSION_SECRET="your-super-secret-session-key-please-change-this-too"

# === НАСТРОЙКИ СРЕДЫ ===
# Режим работы
NODE_ENV="development"

# Порт сервера (по умолчанию 5050 для совместимости с фронтендом)
PORT="5050"

# Домен для CORS (в продакшене)
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:5173"

# === EMAIL ИНТЕГРАЦИЯ ===
# SendGrid API ключ для отправки email
SENDGRID_API_KEY=""

# От чьего имени отправлять письма
FROM_EMAIL="noreply@yourdomain.com"
FROM_NAME="AdLinkPro Platform"

# === КРИПТОВАЛЮТНЫЕ ПЛАТЕЖИ ===
# BTCPay Server URL для биткоин-платежей
BTC_PAY_URL=""
BTC_PAY_API_KEY=""
BTC_PAY_STORE_ID=""

# NOWPayments API для крипто-платежей
NOWPAYMENTS_API_KEY=""
NOWPAYMENTS_SANDBOX="true"

# === ВНЕШНИЕ ТРЕКЕРЫ ===
# Keitaro TDS интеграция
KEITARO_URL=""
KEITARO_API_KEY=""

# RedTrack интеграция
REDTRACK_API_KEY=""
REDTRACK_DOMAIN=""

# Voluum интеграция
VOLUUM_API_KEY=""
VOLUUM_ACCESS_TOKEN=""

# === АНТИФРОД НАСТРОЙКИ ===
# Уровень защиты (low/medium/high)
ANTIFRAUD_LEVEL="medium"

# Максимальное количество кликов с одного IP в час
MAX_CLICKS_PER_IP_HOUR="100"

# Автоматическая блокировка подозрительных IP
AUTO_BLOCK_SUSPICIOUS_IPS="true"

# === LOGGING ===
# Уровень логирования (error/warn/info/debug)
LOG_LEVEL="info"

# Sentry DSN для мониторинга ошибок
SENTRY_DSN=""

# === ДОПОЛНИТЕЛЬНЫЕ НАСТРОЙКИ ===
# Время жизни JWT токенов (в секундах)
JWT_EXPIRES_IN="86400"

# Максимальный размер загружаемых файлов (в байтах)
MAX_FILE_SIZE="10485760"

# Включить детальное логирование
DEBUG="true"

# Redis URL для кеширования (опционально)
REDIS_URL=""

# Telegram Bot Token для уведомлений
TELEGRAM_BOT_TOKEN=""

# === WEBHOOKS ===
# Webhook URL для уведомлений о конверсиях
WEBHOOK_URL=""
WEBHOOK_SECRET=""

# === ПРИМЕЧАНИЯ ===
# 1. Скопируйте этот файл как .env
# 2. Заполните все обязательные переменные
# 3. Опциональные переменные можно оставить пустыми - сервисы будут отключены
# 4. В продакшене обязательно смените JWT_SECRET и SESSION_SECRET
# 5. Для тестирования можно использовать SQLite: DATABASE_URL="file:./dev.db"