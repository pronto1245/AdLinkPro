# Основные переменные
NODE_ENV=development
PORT=5000
HOST=0.0.0.0

# База данных (обязательно в production)
DATABASE_URL=postgresql://user:password@host:5432/database

# JWT и сессии (с дефолтными значениями)
JWT_SECRET=development-jwt-secret-change-in-production
JWT_EXPIRES_IN=24h
SESSION_SECRET=development-session-secret

# Email (опционально - при отсутствии отключено)
SENDGRID_API_KEY=
EMAIL_FROM=noreply@platform.com

# Внешние трекеры (все опционально)
KEITARO_TOKEN=
BINOM_TOKEN=
REDTRACK_TOKEN=
VOLUUM_TOKEN=

# Google Cloud (опционально)
GOOGLE_CLOUD_PROJECT_ID=
GOOGLE_CLOUD_STORAGE_BUCKET=
GOOGLE_APPLICATION_CREDENTIALS=

# Telegram (опционально)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Настройки производительности
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=900000
POSTBACK_RETRY_ATTEMPTS=5
POSTBACK_RETRY_DELAY=1000
POSTBACK_TIMEOUT=10000
BCRYPT_ROUNDS=12
