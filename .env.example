# === ОБЯЗАТЕЛЬНЫЕ ПЕРЕМЕННЫЕ ===
# База данных (PostgreSQL)
DATABASE_URL="postgresql://username:password@host:port/database"

# Секретные ключи для JWT и сессий (ОБЯЗАТЕЛЬНО поменяйте!)
JWT_SECRET="your-super-secret-jwt-key-min-256-bits-long-please-change-this"
SESSION_SECRET="your-super-secret-session-key-please-change-this-too"

# === ОПЦИОНАЛЬНЫЕ ПЕРЕМЕННЫЕ ===
# Email сервис (SendGrid)
SENDGRID_API_KEY="SG.xxxxxxxxxxxxxxxx"
SENDGRID_FROM_EMAIL="noreply@yourdomain.com"

# Интеграция с трекерами
VOLUUM_TOKEN="your-voluum-api-token"
KEITARO_TOKEN="your-keitaro-api-token"  
BINOM_TOKEN="your-binom-api-token"
REDTRACK_TOKEN="your-redtrack-api-token"

# Google Cloud Storage (для загрузки файлов)
GOOGLE_CLOUD_PROJECT_ID="your-gcp-project-id"
GOOGLE_CLOUD_STORAGE_BUCKET="your-gcs-bucket-name"
GOOGLE_APPLICATION_CREDENTIALS="path/to/gcp-service-account.json"

# Telegram Bot (для уведомлений)
TELEGRAM_BOT_TOKEN="your-telegram-bot-token"
TELEGRAM_CHAT_ID="your-telegram-chat-id"

# === НАСТРОЙКИ СРЕДЫ ===
# Режим работы
NODE_ENV="development"

# Порт сервера (по умолчанию 5000)
PORT="5000"

# Домен для CORS (в продакшене)
ALLOWED_ORIGINS="https://yourdomain.com,https://www.yourdomain.com"

# === АНТИФРОД НАСТРОЙКИ ===
# Уровень защиты (low/medium/high)
ANTIFRAUD_LEVEL="medium"

# Максимальное количество кликов с одного IP в час
MAX_CLICKS_PER_IP_HOUR="100"

# === ДОПОЛНИТЕЛЬНЫЕ НАСТРОЙКИ ===
# Время жизни JWT токенов (в секундах)
JWT_EXPIRES_IN="86400"

# Максимальный размер загружаемых файлов (в байтах)
MAX_FILE_SIZE="10485760"

# Включить детальное логирование
DEBUG="true"

# === ПРИМЕЧАНИЯ ===
# 1. Скопируйте этот файл как .env
# 2. Заполните все обязательные переменные
# 3. Опциональные переменные можно оставить пустыми - сервисы будут отключены
# 4. В продакшене обязательно смените JWT_SECRET и SESSION_SECRET
# 5. Для тестирования можно использовать SQLite: DATABASE_URL="file:./dev.db"