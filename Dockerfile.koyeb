FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies (including dev dependencies for build)
RUN npm install

# Copy source code
COPY . .

# Build the application
RUN npm run build

# Expose port (Koyeb automatically assigns PORT)
EXPOSE 5000

# Set environment
ENV NODE_ENV=production
ENV PORT=5000

# Start production server
CMD ["npm", "start"]