# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/affiliate_platform

# Redis Configuration (for BullMQ queues)
REDIS_URL=redis://localhost:6379

# JWT Secret for authentication
JWT_SECRET=your-super-secret-jwt-key-here-change-in-production

# Keitaro Integration
KEITARO_ENDPOINT=https://trk.example/click.php
KEITARO_TOKEN=your-keitaro-api-token-here

# Binom Integration
BINOM_ENDPOINT=https://binom.example.com/click.php
BINOM_TOKEN=your-binom-api-token-here

# RedTrack Integration
REDTRACK_ENDPOINT=https://redtrack.example.com/postback
REDTRACK_TOKEN=your-redtrack-api-token-here

# Voluum Integration
VOLUUM_ENDPOINT=https://voluum.example.com/postback
VOLUUM_TOKEN=your-voluum-api-token-here

# Google Cloud Storage (for creative files)
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_CLOUD_STORAGE_BUCKET=your-bucket-name
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# Email Configuration (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@yourplatform.com

# Development Settings
NODE_ENV=development
PORT=5000

# Anti-fraud Configuration
ANTIFRAUD_ENABLED=true
ANTIFRAUD_LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# Session Configuration
SESSION_SECRET=your-session-secret-key-here
SESSION_MAX_AGE=86400000

# WebSocket Configuration
WS_PORT=8080

# Postback Configuration
POSTBACK_RETRY_ATTEMPTS=5
POSTBACK_RETRY_DELAY=1000
POSTBACK_TIMEOUT=10000

# Security Settings
BCRYPT_ROUNDS=12
LOGIN_ATTEMPT_LIMIT=5
LOGIN_LOCKOUT_TIME=900000

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Feature Flags
ENABLE_2FA=true
ENABLE_KYC=true
ENABLE_AUDIT_LOGS=true
ENABLE_REAL_TIME_ANALYTICS=true