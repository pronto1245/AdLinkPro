# Основные настройки базы данных
DATABASE_URL=postgresql://username:password@host:port/database

# JWT секрет
JWT_SECRET=your-super-secret-jwt-key

# SSL настройки
ENABLE_REAL_SSL=false  # true для реальных сертификатов, false для демо

# Let's Encrypt настройки (только если ENABLE_REAL_SSL=true)
LETSENCRYPT_CONTACT_EMAIL=admin@your-domain.com
LETSENCRYPT_ACCOUNT_KEY_PATH=./.letsencrypt/account.key
NODE_ENV=production  # production для реальных сертификатов, development для staging

# DNS провайдер API (опционально, для DNS-01 challenge)
CLOUDFLARE_API_KEY=your-cloudflare-api-key
CLOUDFLARE_EMAIL=your-email@domain.com

# Google Cloud Storage (для файлов)
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_CLOUD_STORAGE_BUCKET=your-bucket-name
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# SendGrid (для уведомлений)
SENDGRID_API_KEY=your-sendgrid-api-key

# Webhook для SSL уведомлений
SSL_WEBHOOK_URL=https://your-domain.com/api/ssl-notifications

# Трекинг системы (опционально)
KEITARO_TOKEN=your-keitaro-token
BINOM_TOKEN=your-binom-token
REDTRACK_TOKEN=your-redtrack-token
VOLUUM_TOKEN=your-voluum-token