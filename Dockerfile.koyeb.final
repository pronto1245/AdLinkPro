FROM node:20-alpine

WORKDIR /app

# Копируем package.json
COPY package*.json ./

# Устанавливаем ВСЕ зависимости (включая dev для tsx)
RUN npm install

# Копируем весь проект
COPY . .

# Открываем порт
EXPOSE 5000

# Переменные окружения
ENV NODE_ENV=production
ENV PORT=5000

# Запуск приложения без сборки (работает гарантированно)
CMD ["npm", "run", "dev"]