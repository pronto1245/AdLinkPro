FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies 
RUN npm install

# Copy all source files
COPY . .

# Expose port
EXPOSE 5000

# Environment variables
ENV NODE_ENV=production
ENV PORT=5000

# Start with development command (no build required)
# This works because Vite serves files dynamically in dev mode
CMD ["npm", "run", "dev"]